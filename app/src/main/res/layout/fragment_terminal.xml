<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Blank delay input for user -->
    <EditText
        android:id="@+id/delayInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new delay (seconds)"
        android:inputType="number" />

    <!-- Button to set the number in the service -->
    <Button
        android:id="@+id/setButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Delay"
        android:layout_marginTop="8dp" />

    <!-- TextView to show the service value -->
    <TextView
        android:id="@+id/delayDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current value: "
        android:textSize="18sp"
        android:paddingTop="16dp" />

    <!-- Buttons for OBD controls -->
    <Button
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start OBD"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop OBD"
        android:layout_marginTop="8dp" />

</LinearLayout>